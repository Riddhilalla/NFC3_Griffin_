<%- layout("/layouts/boilerplate") -%>

<!-- Style for the page -->
<style>
  body {
    background-color: #A3B18A; /* Replace with actual image URL */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0;
    font-family: 'Open Sans', sans-serif;
  }

  .navbar {
    background-color: #3A5A40;
    color: #DAD7CD;
    width: 1400px;
    padding: 10px 20px;
    position: fixed;
    font-family: 'Poppins', Courier, monospace;
    font-weight: 500;
    top: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
    font-family: 'Poppins', sans-serif;
  }

  .navbar h1 {
    font-weight: 500;
    margin: 0;
    font-size: 24px;
  }

  .navbar ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 15px;
  }

  .navbar ul li {
    display: inline;
  }

  .navbar ul li a {
    text-decoration: none;
    color: #DAD7CD;
    font-weight: 300;
    font-family: 'Open Sans', sans-serif;
  }

  .navbar ul li a:hover {
    color: #A3B18A;
  }

  .login-container {
    background-color: #3A5A40;
    color: #DAD7CD;
    border-radius: 10px;
    padding: 30px;
    width: 100%;
    height: 100%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 441px;
    
  }

  .form-label,
  .form-control {
    color: #DAD7CD;
  }

  .form-control {
    background-color: #A3B18A;
    border: 1px solid #DAD7CD;
  }

  .btn-custom {
    background-color: #A3B18A;
    color: #3A5A40;
    border: none;
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    margin-top: 20px;
  }

  .btn-custom:hover {
    background-color: #DAD7CD;
    color: #3A5A40;
  }

  h2 {
    color: #DAD7CD;
    margin-bottom: 20px;
    font-family: 'Poppins', sans-serif;
  }

  @media (max-width: 600px) {
    .navbar ul {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>

<!-- Navigation Bar -->


<!-- Main container -->
<div class="login-container">
  <h2 class="text-center">Login</h2>
  <form action="/login" method="POST" class="needs-validation" novalidate>
    <!-- Username Input -->
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input
        name="username"
        placeholder="Enter your username"
        type="text"
        class="form-control"
        required
      />
    </div>

    <!-- Password Input -->
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        name="password"
        placeholder="Enter your password"
        type="password"
        class="form-control"
        required
      />
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <button type="submit" class="btn btn-custom">Login</button>
    </div>
  </form>
</div>
